<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".TeacherLogInActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY MANAGEMENT"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="70sp"
        />


    <EditText
        android:id="@+id/user_name_Id"

        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="USER NAME"
        android:layout_marginLeft="20sp"
        android:textColorHint="#00aeff"
        android:layout_marginBottom="10sp"
        />
    <EditText
        android:id="@+id/password_Id"

        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:hint="PASSWORD"
        android:layout_marginLeft="20sp"

        android:textColorHint="#00aeff"
        android:layout_marginBottom="10sp"
        />



    <Button
        android:id="@+id/login_button_Id"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="60sp"
        />

    <TextView
        android:id="@+id/warning_attempt_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Number of Incorrect attempts"
        android:textSize="18sp"
        />


</LinearLayout>